-- White Screen Script by sherikyt

local StarterGui = game:GetService("StarterGui")

-- Create White Screen GUI
local whiteScreenGui = Instance.new("ScreenGui")
whiteScreenGui.Name = "WhiteScreenOnly"
whiteScreenGui.ResetOnSpawn = false
whiteScreenGui.DisplayOrder = 9999
whiteScreenGui.Enabled = true

-- Full Screen White Frame
local whiteFrame = Instance.new("Frame")
whiteFrame.Name = "WhiteFrame"
whiteFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
whiteFrame.BackgroundTransparency = 0
whiteFrame.BorderSizePixel = 0
whiteFrame.Size = UDim2.new(1, 0, 1, 0)
whiteFrame.Parent = whiteScreenGui

-- Parent to StarterGui
whiteScreenGui.Parent = StarterGui

print("White screen activated")
