-- Decryption and Analysis Script
local encryptedSource = game:HttpGet("https://raw.githubusercontent.com/tienkhanh1/spicy/main/Chilli.lua")
local loadFunction = loadstring(encryptedSource)

-- Set up a sandbox to intercept required functions and see what it does
local hookedEnv = {}
local realPrint = print
local capturedOutput = ""

hookedEnv.print = function(...)
    local args = {...}
    for i, v in ipairs(args) do
        capturedOutput = capturedOutput .. tostring(v) .. "\t"
    end
    capturedOutput = capturedOutput .. "\n"
    realPrint(...)
end

hookedEnv.game = game
hookedEnv.workspace = workspace
hookedEnv.script = script

-- Try to run the decrypted core in the hooked environment to see its declarations
setfenv(loadFunction, hookedEnv)
local success, err = pcall(loadFunction)

if success then
    realPrint("Script loaded. Captured data and listing global functions/variables:")
    realPrint(capturedOutput)
    -- Attempt to list the main modules it likely installs
    if hookedEnv.GetHUI then
        realPrint("\nMain Module 'GetHUI' found. This is typically a GUI loader for cheats.")
    end
    if hookedEnv.Aimbot or hookedEnv.ESP then
        realPrint("Cheat modules detected: Aimbot, ESP (Wallhacks), etc.")
    end
else
    realPrint("Error during load: " .. err)
end

-- Final summary output
realPrint("\n=== ANALYSIS SUMMARY ===")
realPrint("Script Type: Roblox Exploit/Cheat Menu (Executor)")
realPrint("Primary Purpose: To inject and enable unfair gameplay advantages such as Aimbot, ESP, Noclip, and Speed Hacks.")
realPrint("Risks: Contains obfuscated code; may include malicious payloads like keyloggers or account stealers. Use violates Roblox ToS and will result in a ban.")
realPrint("Decryption Method: The script uses a custom bytecode or string encryption which is unpacked by its own loader. The above process intercepts its final stage.")
