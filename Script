    end)
    
    btn.MouseButton1Up:Connect(function()
        btn.BackgroundTransparency = 0
    end)
    
    mobileControls[btnData.action] = btn
end

-- Camera functions
local function createCameraMarker(position, index)
    -- Create simple floating camera marker
    local marker = Instance.new("Part")
    marker.Name = "MobileCam_" .. index
    marker.Size = Vector3.new(2, 2, 2)
    marker.Position = position
    marker.Anchored = true
    marker.CanCollide = false
    marker.Transparency = 0.5
    marker.Color = Color3.fromRGB(0, 150, 255)
    marker.Material = EnumMaterial.Neon
    
    -- Light for visibility
    local light = Instance.new("PointLight")
    light.Color = Color3.fromRGB(0, 150, 255)
    light.Brightness = 3
    light.Range = 10
    light.Parent = marker
    
    -- Billboard with number
    local billboard = Instance.new("BillboardGui")
    billboard.Size = UDim2.new(0, 100, 0, 100)
    billboard.StudsOffset = Vector3.new(0, 3, 0)
    billboard.AlwaysOnTop = true
    billboard.Parent = marker
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = "ðŸ“· " .. index
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 16
    label.Parent = billboard
    
    marker.Parent = Workspace
    return marker
end

local function updateStatusText()
    local count = #state.cameras
    if state.isMonitoring then
        status.Text = string.format("ðŸ“· Monitoring\nCamera %d/%d\nUse control buttons", 
            state.cameraIndex, count)
        monitorBtn.Text = "â¹ï¸ EXIT MONITOR"
    else
        status.Text = string.format("ðŸ“· Cameras: %d/%d\nPlace cameras around map", 
            count, config.maxCameras)
        monitorBtn.Text = "ðŸ‘ï¸ MONITOR MODE"
    end
end

local function placeCamera()
    if #state.cameras >= config.maxCameras then
        status.Text = "Max 5 cameras reached!"
        return
    end
    
    local character = player.Character
    if not character then
        status.Text = "Character not found"
        return
    end
    
    local hrp = character:FindFirstChild("HumanoidRootPart")
    if not hrp then
        status.Text = "Cannot place camera"
        return
    end
    
    -- Place camera 15 units above
    local cameraPos = hrp.Position + Vector3.new(0, 15, 0)
    local index = #state.cameras + 1
    
    local marker = createCameraMarker(cameraPos, index)
    
    local cameraData = {
        position = cameraPos,
        marker = marker,
        index = index,
        rotation = Vector2.new(0, 0),
        fov = config.cameraFOV
    }
    
    table.insert(state.cameras, cameraData)
    updateStatusText()
end

local function clearAllCameras()
    for _, cam in ipairs(state.cameras) do
        if cam.marker then
            cam.marker:Destroy()
        end
    end
    state.cameras = {}
    state.currentCamera = nil
    state.cameraIndex = 0
    updateStatusText()
end

local function switchCamera(direction)
    if #state.cameras == 0 then return end
    
    if direction == "next" then
        state.cameraIndex = state.cameraIndex + 1
        if state.cameraIndex > #state.cameras then
            state.cameraIndex = 1
        end
    elseif direction == "prev" then
        state.cameraIndex = state.cameraIndex - 1
        if state.cameraIndex < 1 then
            state.cameraIndex = #state.cameras
        end
    end
    
    state.currentCamera = state.cameras[state.cameraIndex]
    
    if state.currentCamera and state.isMonitoring then
        cameraText.Text = string.format("ðŸ“· Camera %d/%d\nMove: â¬†ï¸â¬‡ï¸â¬…ï¸âž¡ï¸\nZoom: ðŸ”ðŸ”Ž",
            state.cameraIndex, #state.cameras)
        
        -- Update marker colors
        for i, cam in ipairs(state.cameras) do
            if cam.marker then
                local light = cam.marker:FindFirstChild("PointLight")
                if light then
                    light.Color = (i == state.cameraIndex) and 
                        Color3.fromRGB(255, 50, 50) or Color3.fromRGB(0, 150, 255)
                    light.Brightness = (i == state.cameraIndex) and 5 or 2
                end
            end
        end
    end
    
    updateStatusText()
end

local function startMonitoring()
    if #state.cameras == 0 then
        status.Text = "No cameras placed!"
        return
    end
    
    state.isMonitoring = true
    state.cameraIndex = 1
    state.currentCamera = state.cameras[1]
    
    -- Switch camera
    Workspace.CurrentCamera.CameraType = Enum.CameraType.Scriptable
    
    -- Show monitor UI
    monitorUI.Visible = true
    cameraControls.Visible = true
    menu.Visible = false
    
    -- Update first camera
    switchCamera("next")
    updateStatusText()
end

local function stopMonitoring()
    state.isMonitoring = false
    
    -- Return to normal camera
    Workspace.CurrentCamera.CameraType = Enum.CameraType.Custom
    
    -- Hide monitor UI
    monitorUI.Visible = false
    cameraControls.Visible = false
    menu.Visible = true
    
    -- Reset markers
    for _, cam in ipairs(state.cameras) do
        if cam.marker then
            local light = cam.marker:FindFirstChild("PointLight")
            if light then
                light.Color = Color3.fromRGB(0, 150, 255)
                light.Brightness = 2
            end
        end
    end
    
    updateStatusText()
end

-- Mobile control functions
local function moveCamera(direction)
    if not state.isMonitoring or not state.currentCamera then return end
    
    local camData = state.currentCamera
    
    if direction == "up" then
        camData.rotation = Vector2.new(
            camData.rotation.X,
            math.max(camData.rotation.Y - 0.2, -1.5)
        )
    elseif direction == "down" then
        camData.rotation = Vector2.new(
            camData.rotation.X,
            math.min(camData.rotation.Y + 0.2, 1.5)
        )
    elseif direction == "left" then
        camData.rotation = Vector2.new(
            camData.rotation.X - 0.2,
            camData.rotation.Y
        )
    elseif direction == "right" then
        camData.rotation = Vector2.new(
            camData.rotation.X + 0.2,
            camData.rotation.Y
        )
    end
end

local function zoomCamera(direction)
    if direction == "in" then
        state.zoomLevel = math.min(state.zoomLevel + 0.5, 5)
    elseif direction == "out" then
        state.zoomLevel = math.max(state.zoomLevel - 0.5, 0.5)
    end
end

local function resetCamera()
    if state.currentCamera then
        state.currentCamera.rotation = Vector2.new(0, 0)
        state.zoomLevel = 1
    end
end

-- Button events
placeBtn.MouseButton1Click:Connect(placeCamera)
monitorBtn.MouseButton1Click:Connect(function()
    if state.isMonitoring then
        stopMonitoring()
    else
        startMonitoring()
    end
end)

clearBtn.MouseButton1Click:Connect(clearAllCameras)

-- Mobile control button events
mobileControls["prev"].MouseButton1Click:Connect(function()
    switchCamera("prev")
end)

mobileControls["next"].MouseButton1Click:Connect(function()
    switchCamera("next")
end)

mobileControls["up"].MouseButton1Click:Connect(function()
    moveCamera("up")
end)

