-- Camera Control v2.0 by sherikyt
-- Minimal & Powerful Roblox Cheat

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local camera = workspace.CurrentCamera
local mouse = player:GetMouse()

-- Config
local MAX_MARKS = 10
local CAM_SPEED = 20
local SPEED_INCREMENT = 5
local MIN_SPEED = 5
local MAX_SPEED = 50

-- State
local marks = {}
local freeCam = false
local currentMark = 0
local gui
local moveInput = {W=false,A=false,S=false,D=false,Q=false,E=false}

-- Create Sleek UI
local function createUI()
    local ui = Instance.new("ScreenGui")
    ui.Name = "CameraCheatUI"
    ui.Parent = game:GetService("CoreGui")
    ui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    -- Main Control Panel
    local main = Instance.new("Frame")
    main.Name = "MainPanel"
    main.Size = UDim2.new(0, 280, 0, 180)
    main.Position = UDim2.new(0.02, 0, 0.3, 0)
    main.BackgroundColor3 = Color3.fromRGB(15, 15, 25)
    main.BackgroundTransparency = 0.05
    main.BorderSizePixel = 0
    main.Active = true
    main.Draggable = true

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = main

    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(100, 100, 255)
    stroke.Thickness = 2
    stroke.Parent = main

    -- Title
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0, 35)
    title.BackgroundColor3 = Color3.fromRGB(30, 30, 50)
    title.Text = "ðŸŽ¥ CAMERA CONTROL v2.0"
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.Font = Enum.Font.GothamBold
    title.TextSize = 14
    title.TextXAlignment = Enum.TextXAlignment.Center

    local titleCorner = Instance.new("UICorner")
    titleCorner.CornerRadius = UDim.new(0, 12)
    titleCorner.Parent = title
    title.Parent = main

    -- Button Grid (2x2)
    local buttons = {
        {name="FreeCam", text="FREE CAMERA", color=Color3.fromRGB(70, 130, 200), pos=UDim2.new(0.05,0,0.25,0)},
        {name="PlaceMark", text="PLACE MARK", color=Color3.fromRGB(60, 200, 100), pos=UDim2.new(0.55,0,0.25,0)},
        {name="ViewMarks", text="VIEW MARKS", color=Color3.fromRGB(255, 165, 50), pos=UDim2.new(0.05,0,0.55,0)},
        {name="Clear", text="CLEAR MARKS", color=Color3.fromRGB(220, 60, 60), pos=UDim2.new(0.55,0,0.55,0)}
    }

    for _, btnData in pairs(buttons) do
        local btn = Instance.new("TextButton")
        btn.Name = btnData.name
        btn.Size = UDim2.new(0.4, 0, 0.25, 0)
        btn.Position = btnData.pos
        btn.BackgroundColor3 = btnData.color
        btn.Text = btnData.text
        btn.TextColor3 = Color3.white
        btn.Font = Enum.Font.GothamBold
        btn.TextSize = 12
        btn.AutoButtonColor = false
        
        Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
        btn.Parent = main
    end

    -- Info Display
    local info = Instance.new("TextLabel")
    info.Size = UDim2.new(1, 0, 0, 25)
    info.Position = UDim2.new(0, 0, 0.85, 0)
    info.BackgroundTransparency = 1
    info.Text = "ðŸ“ MARKS: 0/"..MAX_MARKS.." | SPEED: "..CAM_SPEED
    info.TextColor3 = Color3.fromRGB(200, 200, 255)
    info.Font = Enum.Font.Gotham
    info.TextSize = 12
    info.TextXAlignment = Enum.TextXAlignment.Center
    info.Parent = main

    main.Parent = ui

    -- Mark Viewer
    local viewer = Instance.new("Frame")
    viewer.Name = "Viewer"
    viewer.Size = UDim2.new(0, 250, 0, 120)
    viewer.Position = UDim2.new(0.02, 0, 0.55, 0)
    viewer.BackgroundColor3 = Color3.fromRGB(15, 15, 30)
    viewer.BackgroundTransparency = 0.1
    viewer.BorderSizePixel = 0
    viewer.Visible = false
    viewer.Active = true
    viewer.Draggable = true

    Instance.new("UICorner", viewer).CornerRadius = UDim.new(0, 12)

    local viewerTitle = Instance.new("TextLabel")
    viewerTitle.Size = UDim2.new(1, 0, 0, 30)
    viewerTitle.BackgroundColor3 = Color3.fromRGB(40, 40, 70)
    viewerTitle.Text = "ðŸ“¹ MARK VIEWER"
    viewerTitle.TextColor3 = Color3.white
    viewerTitle.Font = Enum.Font.GothamBold
    viewerTitle.TextSize = 14
    viewerTitle.Parent = viewer

    local markInfo = Instance.new("TextLabel")
    markInfo.Name = "MarkInfo"
    markInfo.Size = UDim2.new(1, 0, 0, 40)
    markInfo.Position = UDim2.new(0, 0, 0.3, 0)
    markInfo.BackgroundTransparency = 1
    markInfo.Text = "NO MARKS PLACED"
    markInfo.TextColor3 = Color3.fromRGB(200, 200, 255)
    markInfo.Font = Enum.Font.Gotham
    markInfo.TextSize = 14
    markInfo.Parent = viewer

    -- Navigation Buttons
    local navBtns = {
        {name="Prev", text="â—€ PREV", pos=UDim2.new(0.1,0,0.75,0), color=Color3.fromRGB(70,130,200)},
        {name="Next", text="NEXT â–¶", pos=UDim2.new(0.6,0,0.75,0), color=Color3.fromRGB(70,130,200)},
        {name="Exit", text="EXIT", pos=UDim2.new(0.35,0,0.75,0), color=Color3.fromRGB(220,70,70)}
