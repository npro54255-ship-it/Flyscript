-- –§—É–Ω–∫—Ü–∏–∏
local function updateRadiusDisplay()
    radiusLabel.Text = "üåê Black Hole Radius: " .. config.BlackHoleRadius
    sliderFill.Size = UDim2.new((config.BlackHoleRadius - 10) / 190, 0, 1, 0)
    sliderHandle.Position = UDim2.new((config.BlackHoleRadius - 10) / 190, -10, 0.5, -10)
end

local function createMarker(position)
    -- –£–¥–∞–ª—è–µ–º —Å—Ç–∞—Ä—ã–π –º–∞—Ä–∫–µ—Ä –µ—Å–ª–∏ –µ—Å—Ç—å
    if workspace:FindFirstChild("PositionMarker") then
        workspace.PositionMarker:Destroy()
    end
    
    -- –°–æ–∑–¥–∞–µ–º –Ω–æ–≤—ã–π –º–∞—Ä–∫–µ—Ä
    local marker = Instance.new("Part")
    marker.Name = "PositionMarker"
    marker.Size = Vector3.new(2, 2, 2)
    marker.Position = position
    marker.Anchored = true
    marker.CanCollide = false
    marker.Material = EnumMaterial.Neon
    marker.Color = Color3.fromRGB(0, 200, 255)
    marker.Transparency = 0.3
    
    -- –°–≤–µ—á–µ–Ω–∏–µ
    local glow = Instance.new("SurfaceLight")
    glow.Brightness = 2
    glow.Range = 10
    glow.Color = Color3.fromRGB(0, 150, 255)
    glow.Parent = marker
    
    -- –ü–∞—Ä—Ç–∏–∫–ª—ã
    local particles = Instance.new("ParticleEmitter")
    particles.Color = ColorSequence.new(Color3.fromRGB(0, 150, 255))
    particles.Size = NumberSequence.new(0.5)
    particles.Transparency = NumberSequence.new(0.5)
    particles.Lifetime = NumberRange.new(1)
    particles.Rate = 20
    particles.Speed = NumberRange.new(2)
    particles.Parent = marker
    
    -- –ê–Ω–∏–º–∞—Ü–∏—è –ø—É–ª—å—Å–∞—Ü–∏–∏
    local pulseConnection
    pulseConnection = RunService.Heartbeat:Connect(function(delta)
        local pulse = math.sin(tick() * 3) * 0.1 + 1
        marker.Size = Vector3.new
