reverseBtn.Size = UDim2.new(0, 40, 0, 40)
reverseBtn.Position = UDim2.new(1, -40, 0, 0)
reverseBtn.BackgroundColor3 = colors.normal.secondary
reverseBtn.Text = "üëø"
