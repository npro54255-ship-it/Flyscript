-- Button Effects
local function setupButton(btn)
    local original = btn.BackgroundColor3
    
    btn.MouseButton1Down:Connect(function()
        btn.BackgroundColor3 = original * 0.7
    end)
    
    btn.MouseButton1Up:Connect(function()
        btn.BackgroundColor3 = original * 1.1
        wait(0.1)
        btn.BackgroundColor3 = original
    end)
    
    btn.MouseEnter:Connect(function()
        if not UserInputService:IsMouseButtonPressed(Enum.UserInputType.MouseButton1) then
            btn.BackgroundColor3 = original * 1.1
        end
    end)
    
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = original
    end)
end

-- Mark Functions
local function updateInfo()
    if gui and gui.MainPanel then
        local info = gui.MainPanel:FindFirstChildWhichIsA("TextLabel", true)
        if info then
            info.Text = "ðŸ“ MARKS: "..#marks.."/"..MAX_MARKS.." | SPEED: "..CAM_SPEED
        end
    end
end

local function createMark(pos, look)
    if #marks >= MAX_MARKS then 
        warn("Max marks reached!")
        return 
    end
    
    local mark = {
        position = pos,
        lookVector = look,
        part = Instance.new("Part")
    }
    
    mark.part.Name = "CamMark"
    mark.part.Size = Vector3.new(2, 3, 2)
    mark.part.Position = pos
    mark.part.Anchored = true
    mark.part.CanCollide = false
    mark.part.Material = EnumMaterial.Neon
    mark.part.Color = Color3.fromRGB(0, 200, 255)
    mark.part.Transparency = 0.3
    mark.part.Parent = workspace
    
    marks[#marks + 1] = mark
    updateInfo()
    return mark
end

local function clearMarks()
    for _, mark in ipairs(marks) do
        if mark.part then mark.part:Destroy() end
    end
    marks = {}
    currentMark = 0
    updateInfo()
    
    if gui and gui.Viewer then
        gui.Viewer.MarkInfo.Text = "NO MARKS PLACED"
        for _, btn in pairs({"Prev","Next","Exit"}) do
            local b = gui.Viewer:FindFirstChild(btn)
            if b then b.Visible = false end
        end
        gui.Viewer.Exit.Visible = true
    end
end

local function viewMark(index)
    if #marks == 0 or index < 1 or index > #marks then return end
    
    currentMark = index
    local mark = marks[index]
    
    camera.CameraType = Enum.CameraType.Scriptable
    camera.CFrame = CFrame.new(mark.position, mark.position + mark.lookVector)
    
    if gui and gui.Viewer then
        gui.Viewer.MarkInfo.Text = "MARK "..index.."/"..#marks
        gui.Viewer.Prev.Visible = index > 1
        gui.Viewer.Next.Visible = index < #marks
        gui.Viewer.Exit.Visible = true
    end
end

-- Camera Control
local function toggleFreeCam()
    freeCam = not freeCam
    
    if freeCam then
        camera.CameraType = Enum.CameraType.Scriptable
        if player.Character then
            local hum = player.Character:FindFirstChild("Humanoid")
            if hum then hum.PlatformStand = true end
        end
        gui.MainPanel.FreeCam.Text = "EXIT CAM"
        gui.MainPanel.FreeCam.BackgroundColor3 = Color3.fromRGB(220, 70, 70)
    else
        camera.CameraType = Enum.CameraType.Custom
        if player.Character then
            local hum = player.Character:FindFirstChild("Humanoid")
            if hum then 
                hum.PlatformStand = false
                camera.CameraSubject = hum
            end
        end
        gui.MainPanel.FreeCam.Text = "FREE CAMERA"
        gui.MainPanel.FreeCam.BackgroundColor3 = Color3.fromRGB(70, 130, 200)
    end
end

local function toggleViewer()
    if gui then
        gui.Viewer.Visible = not gui.Viewer.Visible
        if gui.Viewer.Visible and #marks > 0 then
            viewMark(1)
        elseif not gui.Viewer.Visible then
            camera.CameraType = freeCam and Enum.CameraType.Scriptable or Enum.CameraType.Custom
        end
    end
end

-- Initialize
gui = createUI()

-- Setup all buttons
for _, btn in pairs(gui:GetDescendants()) do
    if btn:IsA("TextButton") then
        setupButton(btn)
    end
end

-- Button Events
gui.MainPanel.FreeCam.MouseButton1Click:Connect(toggleFreeCam)

gui.MainPanel.PlaceMark.MouseButton1Click:Connect(function()
    if freeCam then
        createMark(camera.CFrame.Position, camera.CFrame.LookVector)
    end
end)

gui.MainPanel.ViewMarks.MouseButton1Click:Connect(toggleViewer)

gui.MainPanel.Clear.MouseButton1Click:Connect(clearMarks)

gui.Viewer.Prev.MouseButton1Click:Connect(function()
    if currentMark > 1 then viewMark(currentMark - 1) end
end)

gui.Viewer.Next.MouseButton1Click:Connect(function()
    if currentMark < #marks then viewMark(currentMark + 1) end
end)

gui.Viewer.Exit.MouseButton1Click:Connect(toggleViewer)

-- Hotkeys
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.F then
        toggleFreeCam()
    elseif input.KeyCode == Enum.KeyCode.M and freeCam then
        createMark(camera.CFrame.Position, camera.CFrame.LookVector)
    elseif input.KeyCode == Enum.KeyCode.V then
        toggleViewer()
    elseif input.KeyCode == Enum.KeyCode.C then
        clearMarks()
    elseif input.KeyCode == Enum.KeyCode.LeftBracket then
        CAM_SPEED = math.max(CAM_SPEED - SPEED_INCREMENT, MIN_SPEED)
        updateInfo()
    elseif input.KeyCode == Enum.KeyCode.RightBracket then
        CAM_SPEED = math.min(CAM_SPEED + SPEED_INCREMENT, MAX_SPEED)
        updateInfo()
    end
    
    if freeCam then
        if input.KeyCode == Enum.KeyCode.W then moveInput.W = true
        elseif input.KeyCode == Enum.KeyCode.A then moveInput.A = true
        elseif input.KeyCode == Enum.KeyCode.S then moveInput.S = true
        elseif input.KeyCode == Enum.KeyCode.D then moveInput.D = true
        elseif input.KeyCode == Enum.KeyCode.Q then moveInput.Q = true
        elseif input.KeyCode == Enum.KeyCode.E then moveInput.E = true
        end
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if freeCam then
        if input.KeyCode == Enum.KeyCode.W then moveInput.W = false
        elseif input.KeyCode == Enum.KeyCode.A then moveInput.A = false
        elseif input.KeyCode == Enum.KeyCode.S then moveInput.S = false
        elseif input.KeyCode == Enum.KeyCode.D then moveInput.D = false
        elseif input.KeyCode == Enum.KeyCode.Q then moveInput.Q = false
        elseif input.KeyCode == Enum.KeyCode.E then moveInput.E = false
        end
    end
end)

-- Mouse wheel speed
mouse.WheelForward:Connect(function()
    if freeCam then
        CAM_SPEED = math.min(CAM_SPEED + SPEED_INCREMENT, MAX_SPEED)
        updateInfo()
    end
end)

mouse.WheelBackward:Connect(function()
    if freeCam then
        CAM_SPEED = math.max(CAM_SPEED - SPEED_INCREMENT, MIN_SPEED)
        updateInfo()
    end
end)

-- Camera Movement
RunService.RenderStepped:Connect(function(delta)
    if freeCam then
        local move = Vector3.new(0,0,0)
        
        if moveInput.W then move = move + camera.CFrame.LookVector end
        if moveInput.S then move = move - camera.CFrame.LookVector end
        if moveInput.D then move = move + camera.CFrame.RightVector end
        if moveInput.A then move = move - camera.CFrame.RightVector end
        if moveInput.E then move = move + Vector3.new(0,1,0) end
        if moveInput.Q then move = move - Vector3.new(0,1,0) end
        
        if move.Magnitude > 0 then
            camera.CFrame = camera.CFrame + (move.Unit * CAM_SPEED * delta)
        end
        
        if UserInputService:IsMouseButtonPressed(Enum.UserInputType.MouseButton2) then
            local mouseDelta = UserInputService:GetMouseDelta()
            camera.CFrame = camera.CFrame * CFrame.fromOrientation(
                -mouseDelta.Y * 0.003,
                -mouseDelta.X * 0.003,
                0
            )
        end
    end
end)

-- Auto-inject notification
local notify = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", notify)
frame.Size = UDim2.new(0, 300, 0, 60)
frame.Position = UDim2.new(0.5, -150, 0.1, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 50)
frame.BorderSizePixel = 0
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 10)

local label = Instance.new("TextLabel", frame)
label.Size = UDim2.new(1, 0, 1, 0)
label.BackgroundTransparency = 1
label.Text = "ðŸŽ¥ Camera Control v2.0 loaded!\nby sherikyt | F, M, V, C keys"
label.TextColor3 = Color3.white
label.Font = Enum.Font.GothamBold
label.TextSize = 14

task.wait(3)
notify:Destroy()

print("Camera Control v2.0 by sherikyt - Ready!")
