        bg = Color3.fromRGB(40, 0, 0),
        primary = Color3.fromRGB(255, 50, 50),
        secondary = Color3.fromRGB(255, 0, 0),
        light = Color3.fromRGB(255, 200, 200),
        dark = Color3.fromRGB(20, 0, 0)
    }
}

local state = {
    isReverseMode = false,
    currentMode = "normal"
}

