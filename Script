flyControlsMap["back"].MouseButton1Down:Connect(function()
    flyKeys.back = true
end)
flyControlsMap["back"].MouseButton1Up:Connect(function()
    flyKeys.back = false
end)

flyControlsMap["left"].MouseButton1Down:Connect(function()
    flyKeys.left = true
end)
flyControlsMap["left"].MouseButton1Up:Connect(function()
    flyKeys.left = false
end)

flyControlsMap["right"].MouseButton1Down:Connect(function()
    flyKeys.right = true
end)
flyControlsMap["right"].MouseButton1Up:Connect(function()
    flyKeys.right = false
end)

flyControlsMap["up"].MouseButton1Down:Connect(function()
    flyKeys.up = true
end)
flyControlsMap["up"].MouseButton1Up:Connect(function()
    flyKeys.up = false
end)

flyControlsMap["down"].MouseButton1Down:Connect(function()
    flyKeys.down = true
end)
flyControlsMap["down"].MouseButton1Up:Connect(function()
    flyKeys.down = false
end)

flyControlsMap["faster"].MouseButton1Click:Connect(function()
    config.flySpeed = math.min(config.flySpeed + 5, 100)
    updateStatusText()
end)

flyControlsMap["slower"].MouseButton1Click:Connect(function()
    config.flySpeed = math.max(config.flySpeed - 5, 5)
    updateStatusText()
end)

flyControlsMap["exit"].MouseButton1Click:Connect(stopFlying)

-- View control button events
viewControls["prev"].MouseButton1Click:Connect(function()
    switchCamera("prev")
end)

viewControls["next"].MouseButton1Click:Connect(function()
    switchCamera("next")
end)

viewControls["zoomin"].MouseButton1Click:Connect(function()
    state.zoomLevel = math.min(state.zoomLevel + 0.5, 5)
end)

viewControls["zoomout"].MouseButton1Click:Connect(function()
    state.zoomLevel = math.max(state.zoomLevel - 0.5, 0.5)
end)

viewControls["reset"].MouseButton1Click:Connect(function()
    state.zoomLevel = 1
end)

viewControls["exit"].MouseButton1Click:Connect(stopViewing)

-- Main button events
flyBtn.MouseButton1Click:Connect(function()
    if state.isFlying then
        stopFlying()
    else
        startFlying()
    end
end)

saveBtn.MouseButton1Click:Connect(saveCameraPosition)

monitorBtn.MouseButton1Click:Connect(function()
    if state.isMonitoring then
        stopViewing()
    else
        startViewing()
    end
end)

clearBtn.MouseButton1Click:Connect(clearAllCameras)

-- Toggle menu
menuToggleBtn.MouseButton1Click:Connect(function()
    if state.isFlying or state.isMonitoring then return end
    
    state.menuVisible = not state.menuVisible
    
    if state.menuVisible then
        menu.Position = UDim2.new(0, 10, 0.5, -175)
        menuToggleBtn.Position = UDim2.new(0, 300, 0.5, -25)
        menuToggleBtn.Text = "â—€"
    else
        menu.Position = UDim2.new(-1, 0, 0.5, -175)
        menuToggleBtn.Position = UDim2.new(0, 10, 0.5, -25)
        menuToggleBtn.Text = "â–¶"
    end
end)

-- Flying camera loop
local flyConnection
local function setupFlyLoop()
    if flyConnection then
        flyConnection:Disconnect()
    end
    
    flyConnection = RunService.RenderStepped:Connect(function(delta)
        if state.isFlying then
            local camera = Workspace.CurrentCamera
            
            -- Calculate movement direction
            local moveDirection = Vector3.new(0, 0, 0)
            
            if flyKeys.forward then
                moveDirection = moveDirection + camera.CFrame.LookVector
            end
            if flyKeys.back then
                moveDirection = moveDirection - camera.CFrame.LookVector
            end
            if flyKeys.right then
                moveDirection = moveDirection + camera.CFrame.RightVector
            end
            if flyKeys.left then
                moveDirection = moveDirection - camera.CFrame.RightVector
            end
            if flyKeys.up then
                moveDirection = moveDirection + Vector3.new(0, 1, 0)
            end
 
