local controlButtons = {
    {name = "CamLeft", text = "â†", icon = "â¬…ï¸", action = "prev"},
    {name = "CamUp", text = "UP", icon = "â¬†ï¸", action = "up"},
    {name = "CamRight", text = "â†’", icon = "âž¡ï¸", action = "next"},
    {name = "CamDown", text = "DOWN", icon = "â¬‡ï¸", action = "down"},
    {name = "ZoomIn", text = "ZOOM IN", icon = "ðŸ”", action = "zoomin"},
