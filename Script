-- Camera functions
local function createCameraMarker(position, index)
    -- Create floating camera marker
    local marker = Instance.new("Part")
    marker.Name = "SavedCamera_" .. index
    marker.Size = Vector3.new(2, 2, 2)
    marker.Position = position
    marker.Anchored = true
    marker.CanCollide = false
    marker.Transparency = 0.5
    marker.Color = Color3.fromRGB(0, 150, 255)
    marker.Material = EnumMaterial.Neon
    
    -- Light
    local light = Instance.new("PointLight")
    light.Color = Color3.fromRGB(0, 150, 255)
    light.Brightness = 3
    light.Range = 10
    light.Parent = marker
    
    -- Billboard with number
    local billboard = Instance.new("BillboardGui")
    billboard.Size = UDim2.new(0, 100, 0, 100)
    billboard.StudsOffset = Vector3.new(0, 3, 0)
    billboard.AlwaysOnTop = true
    billboard.Parent = marker
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = "ðŸ“· " .. index
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 16
    label.Parent = billboard
    
    marker.Parent = Workspace
    return marker
end

local function updateStatusText()
    local count = #state.cameras
    if state.isFlying then
        status.Text = string.format("ðŸ•Šï¸ Flying Mode\nSpeed: %d\nPosition saved: %d/%d", 
            config.flySpeed, count, config.maxCameras)
        flyBtn.Text = "â¹ï¸ STOP FLYING"
    elseif state.isMonitoring then
        status.Text = string.format("ðŸ‘ï¸ Viewing Cameras\nCamera %d/%d\nUse buttons below", 
            state.cameraIndex, count)
        monitorBtn.Text = "â¹ï¸ EXIT VIEW"
    else
        status.Text = string.format("ðŸ“· Cameras: %d/%d\n1. Fly around\n2. Save positions", 
            count, config.maxCameras)
        flyBtn.Text = "ðŸ•Šï¸ FREE CAMERA"
        monitorBtn.Text = "ðŸ‘ï¸ VIEW CAMERAS"
    end
end

local function saveCameraPosition()
    if #state.cameras >= config.maxCameras then
        status.Text = "Max 5 cameras reached!"
        return
    end
    
    local index = #state.cameras + 1
    local position = state.flyPosition
    
    local marker = createCameraMarker(position, index)
    
    local cameraData = {
        position = position,
        marker = marker,
        index = index,
        fov = config.cameraFOV
    }
    
    table.insert(state.cameras, cameraData)
    updateStatusText()
end

local function clearAllCameras()
    for _, cam in ipairs(state.cameras) do
        if cam.marker then
            cam.marker:Destroy()
        end
    end
    state.cameras = {}
    state.currentCamera = nil
    state.cameraIndex = 0
    updateStatusText()
end

local function switchCamera(direction)
    if #state.cameras == 0 then return end
    
    if direction == "next" then
        state.cameraIndex = state.cameraIndex + 1
        if state.cameraIndex > #state.cameras then
            state.cameraIndex = 1
        end
    elseif direction == "prev" then
        state.cameraIndex = state.cameraIndex - 1
        if state.cameraIndex < 1 then
            state.cameraIndex = #state.cameras
        end
    end
    
    state.currentCamera = state.cameras[state.cameraIndex]
    
    if state.currentCamera then
        cameraText.Text = string.format("ðŸ“· Camera %d/%d\nPosition saved from flight",
            state.cameraIndex, #state.cameras)
        
        -- Update marker colors
        for i, cam in ipairs(state.cameras) do
            if cam.marker then
                local light = cam.marker:FindFirstChild("PointLight")
                if light then
                    light.Color = (i == state.cameraIndex) and 
                        Color3.fromRGB(255, 50, 50) or Color3.fromRGB(0, 150, 255)
                    light.Brightness = (i == state.cameraIndex) and 5 or 2
                end
            end
        end
    end
    
    updateStatusText()
end

-- Flying functions
local function startFlying()
    if state.isFlying then return end
    
    state.isFlying = true
    local character = player.Character
    
    -- Store original position if character exists
    if character then
        local hrp = character:FindFirstChild("HumanoidRootPart")
        if hrp then
            state.originalPosition = hrp.Position
        end
    end
    
    -- Start at current camera position or character position
    local camera = Workspace.CurrentCamera
    state.flyPosition = camera.CFrame.Position
    state.flyRotation = Vector2.new(0, 0)
    
    -- Switch to scriptable camera
    camera.CameraType = Enum.CameraType.Scriptable
    
    -- Show flying controls
    flyControls.Visible = true
    menu.Visible = false
    
    updateStatusText()
end

local function stopFlying()
    if not state.isFlying then return end
    
    state.isFlying = false
    
    -- Return to normal camera
    local camera = Workspace.CurrentCamera
    camera.CameraType = Enum.CameraType.Custom
    
    -- Hide flying controls
    flyControls.Visible = false
    menu.Visible = true
    
    updateStatusText()
end

-- Viewing functions
local function startViewing()
    if #state.cameras == 0 then
        status.Text = "No cameras saved!"
        return
    end
    
    state.isMonitoring = true
    state.cameraIndex = 1
    state.currentCamera = state.cameras[1]
    
    -- Switch camera
    Workspace.CurrentCamera.CameraType = Enum.CameraType.Scriptable
    
    -- Show viewing UI
    monitorUI.Visible = true
    cameraControls.Visible = true
    menu.Visible = false
    
    -- Update first camera
    switchCamera("next")
    updateStatusText()
end

local function stopViewing()
    state.isMonitoring = false
    
    -- Return to normal camera
    Workspace.CurrentCamera.CameraType = Enum.CameraType.Custom
    
    -- Hide viewing UI
    monitorUI.Visible = false
    cameraControls.Visible = false
    menu.Visible = true
    
    -- Reset markers
    for _, cam in ipairs(state.cameras) do
        if cam.marker then
            local light = cam.marker:FindFirstChild("PointLight")
            if light then
                light.Color = Color3.fromRGB(0, 150, 255)
                light.Brightness = 2
            end
        end
    end
    
    updateStatusText()
end

-- Flying movement functions
local flyKeys = {
    forward = false,
    back = false,
    left = false,
    right = false,
    up = false,
    down = false
}

-- Fly control button events
flyControlsMap["forward"].MouseButton1Down:Connect(function()
    flyKeys.forward = true
end)
