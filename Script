-- Chop Your Tree - No Cooldown & Fast Click Toggle FIX
-- by Colin

local Player = game:GetService("Players").LocalPlayer
local Mouse = Player:GetMouse()

-- Force-create GUI
local CoreGui = game:GetService("CoreGui")
if not CoreGui:FindFirstChild("FastChopGUI_FIX") then
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "FastChopGUI_FIX"
    ScreenGui.Parent = CoreGui
    ScreenGui.ResetOnSpawn = false

    local Frame = Instance.new("Frame")
    Frame.Name = "MainFrame"
    Frame.Parent = ScreenGui
    Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    Frame.BorderSizePixel = 0
    Frame.Position = UDim2.new(0, 10, 0, 10)
    Frame.Size = UDim2.new(0, 150, 0, 80)

    local TextButton = Instance.new("TextButton")
    TextButton.Parent = Frame
    TextButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    TextButton.BorderSizePixel = 0
    TextButton.Position = UDim2.new(0.05, 0, 0.2, 0)
    TextButton.Size = UDim2.new(0.9, 0, 0.4, 0)
    TextButton.Font = Enum.Font.SourceSansBold
    TextButton.Text = "FAST CLICK"
    TextButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    TextButton.TextScaled = true

    local Status = Instance.new("TextLabel")
    Status.Parent = Frame
    Status.BackgroundTransparency = 1
    Status.Position = UDim2.new(0.05, 0, 0.65, 0)
    Status.Size = UDim2.new(0.9, 0, 0.3, 0)
    Status.Font = Enum.Font.SourceSans
    Status.Text = "Status: Inactive"
    Status.TextColor3 = Color3.fromRGB(255, 100, 100)
    Status.TextScaled = true

    -- Logic
    local Active = false
    local Hooks = {}

    local function HookAll()
        for _, obj in pairs(game:GetDescendants()) do
            if obj:IsA("RemoteEvent") and not Hooks[obj] then
                Hooks[obj] = true
                local old = obj.FireServer
                obj.FireServer = function(self, ...)
                    if Active then
                        for i = 1, 10 do task.spawn(old, self, ...) end -- Spam fire
                        return old(self, ...)
                    end
                    return old(self, ...)
                end
            end
        end
    end

    -- Hook everything immediately and on new descendants
    HookAll()
    game.DescendantAdded:Connect(function(obj)
        if obj:IsA("RemoteEvent") and not Hooks[obj] then
            task.wait(0.1)
            Hooks[obj] = true
            local old = obj.FireServer
            obj.FireServer = function(self, ...)
                if Active then
                    for i = 1, 10 do task.spawn(old, self, ...) end
                    return old(self, ...)
                end
                return old(self, ...)
            end
        end
    end)

    -- Toggle
    TextButton.MouseButton1Click:Connect(function()
        Active = not Active
        if Active then
            TextButton.BackgroundColor3 = Color3.fromRGB(100, 255, 100)
            Status.Text = "Status: ACTIVED"
            Status.TextColor3 = Color3.fromRGB(100, 255, 100)
            print("Fast Click ACTIVED - Hooking all remotes.")
        else
            TextButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            Status.Text = "Status: Inactive"
            Status.TextColor3 = Color3.fromRGB(255, 100, 100)
            print("Fast Click Inactive.")
        end
    end)

    print("Fast Chop GUI loaded to CoreGui. Button should work.")
end
